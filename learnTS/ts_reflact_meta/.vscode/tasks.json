{
   "version": "2.0.0",
   "command": "tsc",
   "type": "shell",
   "args": ["-p", ".","-w"],
   "problemMatcher": "$tsc",
   "presentation":{
	"echo": true,
	"reveal": "always",
	"focus": false,
	"panel": "shared",
	"showReuseMessage": true,
	"clear": false
   },
   "tasks": [
      {
         "type": "typescript",
         "tsconfig": "tsconfig.json",
         "problemMatcher": [
            "$tsc"
         ],
         "group": "build",
         "label": "tsc: 构建 - tsconfig.json"
      }
   ]
}